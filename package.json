{
  "name": "@ldesign/size",
  "version": "0.2.0",
  "private": true,
  "description": "页面尺寸缩放功能包 - Monorepo 工作空间",
  "keywords": [
    "css-variables",
    "ldesign",
    "responsive",
    "scale",
    "size",
    "theme",
    "typescript",
    "ui-scale",
    "vue3",
    "react",
    "svelte",
    "svelte5",
    "solidjs"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/size#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/size"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "build:core": "pnpm --filter @ldesign/size-core run build",
    "build:vue": "pnpm --filter @ldesign/size-vue run build",
    "build:react": "pnpm --filter @ldesign/size-react run build",
    "build:svelte": "pnpm --filter @ldesign/size-svelte run build",
    "build:solid": "pnpm --filter @ldesign/size-solid run build",
    "build:watch": "pnpm --filter \"./packages/*\" run build:watch",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "type-check": "pnpm --filter \"./packages/*\" run type-check",
    "lint": "pnpm --filter \"./packages/*\" run lint",
    "lint:check": "pnpm --filter \"./packages/*\" run lint:check",
    "lint:fix": "pnpm --filter \"./packages/*\" run lint:fix",
    "test": "pnpm --filter \"./packages/*\" run test",
    "test:run": "pnpm --filter \"./packages/*\" run test:run",
    "test:coverage": "pnpm --filter \"./packages/*\" run test:coverage",
    "clean": "pnpm --filter \"./packages/*\" run clean"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@ldesign/builder": "workspace:*"
  }
}
