{
  "name": "@ldesign/size",
  "version": "0.2.0",
  "description": "页面尺寸缩放功能包 - Monorepo 工作空间",
  "keywords": [
    "css-variables",
    "ldesign",
    "responsive",
    "scale",
    "size",
    "theme",
    "typescript",
    "ui-scale",
    "vue3"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/size#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/size"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs",
      "default": "./es/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "build:core": "pnpm --filter @ldesign/size-core run build",
    "build:vue": "pnpm --filter @ldesign/size-vue run build",
    "build:watch": "pnpm --filter \"./packages/*\" run build:watch",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "type-check": "pnpm --filter \"./packages/*\" run type-check",
    "lint": "pnpm --filter \"./packages/*\" run lint",
    "lint:check": "pnpm --filter \"./packages/*\" run lint:check",
    "lint:fix": "pnpm --filter \"./packages/*\" run lint:fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "pnpm --filter \"./packages/*\" run clean"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@ldesign/builder": "workspace:*"
  },
  "private": true,
  "typings": "./es/index.d.ts",
  "browser": "./dist/index.js"
}