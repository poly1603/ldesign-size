{
  "name": "@ldesign/size",
  "version": "0.1.0",
  "description": "页面尺寸缩放功能包 - 支持动态切换页面整体尺寸，提供完整的Vue生态支持",
  "keywords": [
    "css-variables",
    "ldesign",
    "responsive",
    "scale",
    "size",
    "theme",
    "typescript",
    "ui-scale",
    "vue3"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/size#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/size"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./core/*": {
      "types": "./es/core/*.d.ts",
      "import": "./es/core/*.js",
      "require": "./lib/core/*.cjs"
    },
    "./locales": {
      "types": "./es/locales/index.d.ts",
      "import": "./es/locales/index.js",
      "require": "./lib/locales/index.cjs"
    },
    "./locales/*": {
      "types": "./es/locales/*.d.ts",
      "import": "./es/locales/*.js",
      "require": "./lib/locales/*.cjs"
    },
    "./modules/*": {
      "types": "./es/modules/*.d.ts",
      "import": "./es/modules/*.js",
      "require": "./lib/modules/*.cjs"
    },
    "./plugin": {
      "types": "./es/plugin/index.d.ts",
      "import": "./es/plugin/index.js",
      "require": "./lib/plugin/index.cjs"
    },
    "./plugin/*": {
      "types": "./es/plugin/*.d.ts",
      "import": "./es/plugin/*.js",
      "require": "./lib/plugin/*.cjs"
    },
    "./presets/*": {
      "types": "./es/presets/*.d.ts",
      "import": "./es/presets/*.js",
      "require": "./lib/presets/*.cjs"
    },
    "./utils": {
      "types": "./es/utils/index.d.ts",
      "import": "./es/utils/index.js",
      "require": "./lib/utils/index.cjs"
    },
    "./utils/*": {
      "types": "./es/utils/*.d.ts",
      "import": "./es/utils/*.js",
      "require": "./lib/utils/*.cjs"
    },
    "./vue": {
      "types": "./es/vue/index.d.ts",
      "import": "./es/vue/index.js",
      "require": "./lib/vue/index.cjs"
    },
    "./vue/*": {
      "types": "./es/vue/*.d.ts",
      "import": "./es/vue/*.js",
      "require": "./lib/vue/*.cjs"
    },
    "./es/vue/index.css": "./es/vue/index.css",
    "./lib/vue/index.css": "./lib/vue/index.css"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder build --watch",
    "dev": "rollup -c -w",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rimraf esm cjs dist types lib coverage .nyc_output",
    "size-check": "size-limit",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:run",
    "deploy": "tsx ../../tools/deploy/package-deployer.ts size",
    "deploy:beta": "tsx ../../tools/deploy/package-deployer.ts size --tag beta",
    "deploy:alpha": "tsx ../../tools/deploy/package-deployer.ts size --tag alpha",
    "deploy:dry-run": "tsx ../../tools/deploy/package-deployer.ts size --dry-run",
    "build:dev": "node scripts/build.js --dev",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "lucide-vue-next": "^0.542.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@ldesign/builder": "workspace:*",
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.18.0",
    "glob": "^10.3.10",
    "jsdom": "^24.0.0",
    "playwright": "^1.40.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "size-limit": "^11.0.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitepress": "^1.0.0",
    "vitest": "^2.0.0",
    "vue": "^3.4.15",
    "vue-tsc": "^2.2.12"
  },
  "size-limit": [
    {
      "name": "Core Bundle",
      "path": "dist/index.js",
      "limit": "50 KB"
    },
    {
      "name": "Core Bundle (gzipped)",
      "path": "dist/index.js",
      "limit": "15 KB",
      "gzip": true
    },
    {
      "name": "ES Module",
      "path": "es/index.js",
      "limit": "30 KB"
    },
    {
      "name": "CommonJS",
      "path": "lib/index.cjs",
      "limit": "150 KB"
    }
  ],
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  }
}
