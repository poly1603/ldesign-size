{
  "name": "@ldesign/size-core",
  "version": "0.2.0",
  "description": "Size management core - Framework agnostic size system",
  "keywords": [
    "css-variables",
    "ldesign",
    "responsive",
    "scale",
    "size",
    "theme",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/size/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/size/packages/core"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./adapter/*": {
      "types": "./es/adapter/*.d.ts",
      "import": "./es/adapter/*.js",
      "require": "./lib/adapter/*.cjs"
    },
    "./constants/*": {
      "types": "./es/constants/*.d.ts",
      "import": "./es/constants/*.js",
      "require": "./lib/constants/*.cjs"
    },
    "./core/*": {
      "types": "./es/core/*.d.ts",
      "import": "./es/core/*.js",
      "require": "./lib/core/*.cjs"
    },
    "./locales": {
      "types": "./es/locales/index.d.ts",
      "import": "./es/locales/index.js",
      "require": "./lib/locales/index.cjs"
    },
    "./locales/*": {
      "types": "./es/locales/*.d.ts",
      "import": "./es/locales/*.js",
      "require": "./lib/locales/*.cjs"
    },
    "./modules/*": {
      "types": "./es/modules/*.d.ts",
      "import": "./es/modules/*.js",
      "require": "./lib/modules/*.cjs"
    },
    "./presets/*": {
      "types": "./es/presets/*.d.ts",
      "import": "./es/presets/*.js",
      "require": "./lib/presets/*.cjs"
    },
    "./utils": {
      "types": "./es/utils/index.d.ts",
      "import": "./es/utils/index.js",
      "require": "./lib/utils/index.cjs"
    },
    "./utils/*": {
      "types": "./es/utils/*.d.ts",
      "import": "./es/utils/*.js",
      "require": "./lib/utils/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder build --watch",
    "dev": "ldesign-builder build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.18.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^2.0.0"
  }
}