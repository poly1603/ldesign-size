{
  "name": "@ldesign/size-vue",
  "version": "0.1.0",
  "description": "Size management for Vue 3 - Vue composables and components",
  "keywords": [
    "vue",
    "vue3",
    "composables",
    "size",
    "ldesign",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/size/packages/vue#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/size/packages/vue"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./es/index.js": "./es/index.js",
    "./composables/*": {
      "types": "./es/composables/*.d.ts",
      "import": "./es/composables/*.js",
      "require": "./lib/composables/*.cjs"
    },
    "./plugin": {
      "types": "./es/plugin/index.d.ts",
      "import": "./es/plugin/index.js",
      "require": "./lib/plugin/index.cjs"
    },
    "./plugin/*": {
      "types": "./es/plugin/*.d.ts",
      "import": "./es/plugin/*.js",
      "require": "./lib/plugin/*.cjs"
    },
    "./plugins": {
      "types": "./es/plugins/index.d.ts",
      "import": "./es/plugins/index.js",
      "require": "./lib/plugins/index.cjs"
    },
    "./plugins/*": {
      "types": "./es/plugins/*.d.ts",
      "import": "./es/plugins/*.js",
      "require": "./lib/plugins/*.cjs"
    },
    "./es/components/SizePresetPicker.vue.css": "./es/components/SizePresetPicker.vue.css",
    "./es/components/SizeSwitcher.vue.css": "./es/components/SizeSwitcher.vue.css",
    "./es/index.css": "./es/index.css",
    "./lib/components/SizePresetPicker.vue.css": "./lib/components/SizePresetPicker.vue.css",
    "./lib/components/SizeSwitcher.vue.css": "./lib/components/SizeSwitcher.vue.css",
    "./lib/index.css": "./lib/index.css"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder build --watch",
    "dev": "ldesign-builder build --watch",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage"
  },
  "dependencies": {
    "lucide-vue-next": "^0.542.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "@ldesign/size-core": "workspace:*"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@ldesign/size-core": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^2.0.0",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^9.18.0",
    "jsdom": "^24.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^2.0.0",
    "vue": "^3.4.15",
    "vue-tsc": "^2.2.12"
  }
}