{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./es",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

