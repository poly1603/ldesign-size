{
  "name": "@ldesign/size-svelte",
  "version": "0.1.0",
  "description": "Size management for Svelte 5 - Stores and components using runes",
  "keywords": [
    "svelte",
    "svelte5",
    "runes",
    "stores",
    "size",
    "ldesign",
    "typescript"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/ldesign/tree/main/packages/size/packages/svelte#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/ldesign.git",
    "directory": "packages/size/packages/svelte"
  },
  "bugs": {
    "url": "https://github.com/ldesign/ldesign/issues"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./stores": {
      "types": "./es/stores/index.d.ts",
      "import": "./es/stores/index.js",
      "require": "./lib/stores/index.cjs"
    },
    "./components/*": {
      "types": "./es/components/*.d.ts",
      "import": "./es/components/*.js",
      "require": "./lib/components/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "svelte": "./es/index.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "build:watch": "ldesign-builder build --watch",
    "dev": "ldesign-builder build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf es lib dist coverage"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "@ldesign/size-core": "workspace:*"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@ldesign/size-core": "workspace:*",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.18.0",
    "jsdom": "^24.0.0",
    "rimraf": "^5.0.0",
    "svelte": "^5.0.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^2.0.0"
  }
}

